<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Formulário - Firjan</title>
  <style>
    body {
      font-family: 'Averta', sans-serif;
      background: #f5f5f5;
      padding: 30px;
      margin: 0;
      color: #000;
    }
    .cabecalho {
      background: url('/formulario-firjan-front/img/background.png') no-repeat center;
      background-size: cover;
      padding: 20px 30px;
      color: white;
      display: flex;
      align-items: center;
      border-radius: 10px;
    }
    .logo {
      max-width: 120px;
      margin-right: 20px;
    }
    .titulo {
      font-size: 18px;
      font-weight: bold;
    }
    .subtitulo {
      font-size: 14px;
    }
    .bloco {
      background: white;
      padding: 20px;
      margin: 20px 0;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    h2 {
      color: #0073e6;
      border-bottom: 2px solid #0073e6;
      padding-bottom: 6px;
    }
    .campo {
      margin-bottom: 12px;
    }
    .campo strong {
      color: #333;
      display: block;
      margin-bottom: 4px;
    }
    .campo span {
      color: #000;
    }
  </style>
</head>
<body>
  <div class="cabecalho">
    <img src="/formulario-firjan-front/img/logo.png" class="logo" alt="Logo Firjan">
    <div>
      <div class="titulo">LEVANTAMENTO DE NECESSIDADES | CONTEXTO</div>
      <div class="subtitulo">Núcleo de Desenvolvimento EaD - Centro de Referência Firjan SENAI Maracanã</div>
    </div>
  </div>

  <div class="bloco">
    <h2>Resumo do Formulário</h2>
    <% Object.entries(dados).forEach(([chave, valor]) => { %>
      <% const nome = chave.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()); %>
      <div class="campo">
        <strong><%= nome %></strong>
        <span><%= Array.isArray(valor) ? valor.join(', ') : (valor || '—') %></span>
      </div>
    <% }) %>
  </div>

  <div class="bloco">
    <p>Enviado em: <%= new Date().toLocaleString('pt-BR') %></p>
    <p>Assinado por: <%= dados.email_demanda || 'Assinante desconhecido' %></p>
  </div>
</body>
</html>
